<!--
  Based on TailwindUI with AlpineJS
  Mobile menu, show/hide based on mobile menu state.

  Entering: "duration-200 ease-out"
    From: "opacity-0 scale-95"
    To: "opacity-100 scale-100"
  Leaving: "duration-100 ease-in"
    From: "opacity-100 scale-100"
    To: "opacity-0 scale-95"
-->
<div
  x-description="'Mobile' flyout menu, show/hide based on flyout menu state."
  x-show="mobileMenuOpen"
  x-transition:enter="transition ease-out duration-200"
  x-transition:enter-start="opacity-0 -translate-y-1"
  x-transition:enter-end="opacity-100 translate-y-0"
  x-transition:leave="transition ease-in duration-150"
  x-transition:leave-start="opacity-100 translate-y-0"
  x-transition:leave-end="opacity-0 -translate-y-1"
  class="mobile-nav absolute z-20 top-0 inset-x-0 p-2 transition transform origin-top-right md:hidden">
  <div class="rounded-lg shadow-lg">
    <div class="rounded-lg shadow-xs bg-white divide-y-2 divide-gray-50">
      <div class="pt-5 pb-6 px-5 space-y-6 sm:space-y-8 sm:pb-8">
        <div class="flex items-center justify-between">
          <div>
            <%= link_to root_path do %>
              <img class="h-8 w-auto sm:h-10" src="https://tailwindui.com/img/logos/workflow-mark-on-white.svg" alt="Workflow">
            <% end %>
          </div>
          <div class="-mr-2">
            <button
              @click="mobileMenuOpen = !mobileMenuOpen; mahcMenuOpen = false; aboutMenuOpen = false; getInvolvedMenuOpen = false; newsMenuOpen = false;"
              @click.away="mobileMenuOpen = false;"
              x-state:on="Item active"
              x-state:off="Item inactive"
              :class="{ 'text-gray-900': mobileMenuOpen, 'text-gray-500': !mobileMenuOpen }"
              type="button"
              class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out">
              <!-- Heroicon name: x -->
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        <div>
          <nav class="mobile-icon-menu space-y-8">
            <div class="grid gap-7 sm:grid-cols-2 sm:gap-y-8 sm:gap-x-4">
              <%= link_to "#", class: "-m-3 space-x-4 flex items-center p-3 rounded-lg hover:bg-gray-50 transition ease-in-out duration-150" do %>
                <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-md bg-indigo-500 text-white sm:h-12 sm:w-12">
                  <!-- Heroicon name: home -->
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                </div>
                <div class="text-base leading-6 font-medium text-gray-900">
                  Home
                </div>
              <% end %>
              <%= link_to "#", class: "-m-3 space-x-4 flex items-center p-3 rounded-lg hover:bg-gray-50 transition ease-in-out duration-150" do %>
                <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-md bg-indigo-500 text-white sm:h-12 sm:w-12">
                  <!-- Heroicon name: newspaper -->
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                </div>
                <div class="text-base leading-6 font-medium text-gray-900">
                  Blog
                </div>
              <% end %>
              <%= link_to "#", class: "-m-3 space-x-4 flex items-center p-3 rounded-lg hover:bg-gray-50 transition ease-in-out duration-150" do %>
                <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-md bg-indigo-500 text-white sm:h-12 sm:w-12">
                  <!-- Heroicon name: moon -->
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                  </svg>
                </div>
                <div class="text-base leading-6 font-medium text-gray-900">
                  Main Link #3
                </div>
              <% end %>
              <%= link_to "#", class: "-m-3 space-x-4 flex items-center p-3 rounded-lg hover:bg-gray-50 transition ease-in-out duration-150" do %>
                <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-md bg-indigo-500 text-white sm:h-12 sm:w-12">
                  <!-- Heroicon name: music-note -->
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                  </svg>
                </div>
                <div class="text-base leading-6 font-medium text-gray-900">
                  Main Link #4
                </div>
              <% end %>
            </div>
            <div class="text-base leading-6">
              <%= link_to "#", class: "font-medium text-indigo-600 hover:text-indigo-500 transition ease-in-out duration-150" do %>
                A call to action &rarr;
              <% end %>
            </div>
          </nav>
        </div>
      </div>
      <div class="py-6 px-5 space-y-6">
        <div class="mobile-links-menu grid grid-cols-2 gap-4">
          <%= link_to "Secondary Link #1", "#", class: "rounded-md text-base leading-6 font-medium text-gray-900 hover:text-gray-700 transition ease-in-out duration-150" %>
          <%= link_to "Secondary Link #2", "#", class: "rounded-md text-base leading-6 font-medium text-gray-900 hover:text-gray-700 transition ease-in-out duration-150" %>
          <%= link_to "Secondary Link #3", "#", class: "rounded-md text-base leading-6 font-medium text-gray-900 hover:text-gray-700 transition ease-in-out duration-150" %>
          <%= link_to "Secondary Link #4", "#", class: "rounded-md text-base leading-6 font-medium text-gray-900 hover:text-gray-600 transition ease-in-out duration-150" %>
        </div>
        <div class="space-y-6">
          <span class="w-full flex rounded-md shadow-sm">
            <%= link_to "Sign in", sign_in_path, class: "btn btn-indigo w-full flex items-center justify-center px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150" %>
          </span>
          <p class="text-center text-base leading-6 font-medium text-gray-500">
            Ready to join us?
            <%= link_to "Sign up today", sign_up_path, class: "text-indigo-600 hover:text-indigo-500 transition ease-in-out duration-150" %>.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
