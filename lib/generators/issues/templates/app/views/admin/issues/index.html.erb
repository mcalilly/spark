<% if current_user && current_user.admin? %>
  <h1 class="text-2xl pb-4">
    Issues
  </h1>

  <section class="prose">
    <ul>
    <% @issues.each do |issue| %>
      <li class="py-2">
        <%= link_to "#{issue.title}", admin_issue_path(issue) %>
      </li>
    <% end %>
    </ul>
  </section>

  <p class="inline-flex rounded-md shadow-sm">
    <%= link_to "Add an Issue", new_admin_issue_path, class: "inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
  </p>
<% end %>
