<section class="block w-full bg-white pb-16 lg:pb-28">
  <div>
    <% if params[:controller] == "issues" && %w(index).include?(params[:action]) %>
      <h1 class="text-4xl lg:text-5xl xl:text-6xl px-4 lg:px-0 pt-12 lg:pt-16">
        Issues
      </h1>
    <% else %>
      <h2 class="text-4xl lg:text-5xl xl:text-6xl px-4 lg:px-0 pt-12 lg:pt-16">
        Issues
      </h2>
    <% end %>
  </div>

  <div class="py-12 lg:py-16">
    <div class="grid grid-cols-1 grid-rows-1 lg:grid-cols-2 lg:grid-rows-3 gap-6 text-xl lg:text-3xl text-gray-900">
      <% @issues.each do |issue| %>
        <%= link_to "#{issue.title}", issue_path(issue), class: "h-24 md:h-36 bg-indigo-200 pl-6 lg:pl-8 pr-10 lg:pr-12 pt-6 lg:pt-8 pb-10 lg:pb-12 shadow-md cursor-pointer" %>
      <% end %>
    </div>
  </div>
</section>
