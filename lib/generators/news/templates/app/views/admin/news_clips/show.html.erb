<% if current_user && current_user.admin? %>
  <h1 class="text-2xl pb-4">
    <%= @issue.title %>
  </h1>

  <section class="prose">
    <%= @issue.body %>
  </section>

  <section class="my-2">
    <div class="mt-8 border-t border-gray-200 pt-5">
      <div class="flex justify-end">
        <span class="inline-flex rounded-md shadow-sm">
          <%= link_to "Edit", edit_admin_issue_path(@issue), class: "inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
        </span>

        <span class="ml-3 inline-flex rounded-md shadow-sm">
          <%= link_to "Delete", admin_issue_path(@issue), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </span>
      </div>
    </div>
  </section>
<% end %>
